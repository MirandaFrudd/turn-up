<div class="container m-3 ">
  <div class="main_card">
    <div class="d-flex justify-content-center">
      <%= form_with model: Favourite.new do |f| %>
      <%= f.hidden_field :restaurant_id, value: @restaurant.id %>
      <%= f.hidden_field :bar_id, value: @bar.id %>
      <%= f.hidden_field :activity_id, value: @activity.id %>
      <% if current_user %>
        <%= f.hidden_field :user_id, value: current_user.id %>
      <% end %>
      <button type="submit" class="btn-star">
        <i class="fas fa-star"></i>
      </button>
      <% end %>
    </div>
    <div class="restaurant">
      <%= image_tag @restaurant.photo, width: 200, crop: :fill %>
      <div class="restaurant-info">
        <div>
          <h2><%= @restaurant.name %></h2>
          <p><%= @restaurant.address %></p>
          <p><%= @restaurant.description %></p>
        </div>
<!--         <div>
          <a class="btn-link" href="<%= @restaurant.website %>">See more</a>
        </div>
 -->      </div>
    </div>
    <div class="bar">
      <%= image_tag @bar.photo, width: 200, crop: :fill %>
      <div class="bar-info">
        <div>
          <h2><%= @bar.name %></h2>
          <p><%= @bar.address %></p>
          <p><%= @bar.description %></p>
        </div>
<!--         <div>
          <a class="btn-link" href="<%= @bar.website %>">See more</a>
        </div> -->
      </div>
    </div>
    <div class="activity">
      <%= image_tag @activity.photo, width: 200, crop: :fill %>
      <div class="activity-info">
        <div>
          <h2><%= @activity.name %></h2>
          <p><%= @activity.address %></p>
          <p><%= @activity.description.truncate(100) %></p>
        </div>
<!--         <div>
          <a class="btn-link" href="<%= @activity.website %>">See more</a>
        </div> -->
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <%= link_to "Shuffle", "", class: "btn-red" %>
    </div>
  </div>
</div>


