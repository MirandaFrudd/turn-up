<h1>My Favourites</h1>

<div class="row align-items-start">
  <% @favourites.each do |favourite| %>
   <div class="col-12 col-sm-6 col-md-4 col-lg-3">

      <div id="fave-card">
        <div class="item">
          <img src="https://source.unsplash.com/random/200x200" alt="restaurant image" class="fave-img">
          <div class="fave-info">
            <div>
              <h2>Where to eat:</h2>
              <h2><%= favourite.restaurant.name %></h2>
            </div>
          </div>
        </div>
        <div class="item">
          <img src="https://source.unsplash.com/random/200x200" alt="restaurant image" class="fave-img">
          <div class="fave-info">
            <div>
              <h2>Where to drink:</h2>
              <h2><%= favourite.bar.name %></h2>
            </div>
          </div>
        </div>
        <div class="item">
          <img src="https://source.unsplash.com/random/200x200" alt="restaurant image" class="fave-img">
          <div class="fave-info">
            <div>
              <h2>What to do:</h2>
              <h2><%= favourite.activity.name %></h2>
            </div>
          </div>
        </div>
        <%= link_to "Delete", favourite_path(favourite), method: :delete, data: { confirm: 'Are you sure?' }, class: "fave-btn" %>
      </div>
      </div>
  <% end %>
</div>

<div class="back-button">
  <%= link_to "Search again", pages_path, class: "fave-btn" %>
</div>




